        "express": "^4.18.2",
        "graphql": "^16.6.0",
        "graphql-date-scalars": "^0.2.0",
        "graphql-type-json": "^0.3.2",
        "knex": "^2.4.2",
        "morgan": "^1.10.0",
        "nanoid": "^3.3.6",
        "pg": "^8.10.0",
        "typescript": "^5.0.4"
    },
